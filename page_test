matchTimeBox = e('#matchTimeBox')
matchTimeBox += e('#matchTimeLabel', 'Match Time')
matchTimeBox += e('#matchTimeValue', '1:00')
teamTimeBar += matchTimeBox

teamTimeBar += teamBox('R')
content += teamTimeBar

content += actionCard(1)

