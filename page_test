print '==================== TEST ======================'
e = elem
t = a('url.html', 'Hello World!') + elem('br')

print t.render()

def scoreBox(team):
    box = e('.scoreBox#team%dScoreBox' % team)
    box += e('.scoreLabel', 'Total Score')
    box += e('.scoreValue#team%dScore' % team)

    return box

def teamBox(side, img=''):
    box = e('#teamBox%s' % side)
    box += e('img#manIn%s' % side)
    return box

# def longCell(side, thickBottom=False, colspan=1):
#     if side == 'L':
        
def shortCell(side, eId, num):
    numberCellClass = 'acCellNumber'
    if side == 'R':
        numberCellClass = 'acCellNumberRightJust'

    box = e('td.acShortCell%s#%s' % (side, eId))
    box += e('.%s' % numberCellClass, num)
    box += e('.acValue')
    
    return box

def longCellR(eId, num):
    box = e('td.acLongCellR.acThinBottom#%s' % eId)
    box += e('.acCellNumberSmallRightJust', num)
    box += e('.acValue')
    return box

def twoColumnCard(cardName, idPrefix):
    items = []
    items.append((e('td.acHeaderL {:colspan => "2"}', cardName),))
    for i in range(5):
        items.append((shortCell('L', '%s%d' % (idPrefix, i), i+2),
                      shortCell('R', '%s%d' % (idPrefix, i + 5), i+7)))
    box = e('td.acLongCellL.acThickBottom#%s10{:colspan => "2"}' % idPrefix)
    box += e('.acCellNumberPadded')
    box += e('.acValue')
    items.append((box,))
    
    return items

def oneColumnCard(cardName, idPrefix):
    items = []
    items.append((e('td.acHeaderR.acThickTop', cardName),))
    for i in range(9):
        items.append((longCellR('%s%d' % (idPrefix, i), i+2),))
    box = e('td.acLongCellR.acThickBottom#%s10' % idPrefix)
    box += e('.acCellNumberSmallRightJust', 12)
    box += e('.acValue')
    items.append((box,))
    return items

def actionCard(team):
    card = e('.actionCard#ActionCard%d' % team)
    cardTable = e('table {:cellpadding => "0", :cellspacing => "0"}')
    gCard = twoColumnCard('GENERAL CARD', 't%d_gc' % team)
    dCard = twoColumnCard('DEFENSIVE CARD', 't%d_dc' % team)
    # specialty card
    spec = []
    spec.append((e('td.acHeaderL {:colspan => "2"}'),))
    spec.append((e('td.acLongCellL.acThinBottom.acCentered#t%d_spec {:colspan => "2"}' % team),))
    for i in range(5):
        specItem = e('td.acLongCellL.acThinBottom#t%d_spec0 {:colspan => "2"}' % team)
        specItem += e('.acCellNumber', i+1)
        specItem += e('.acValue')
        spec.append((specItem,))

    spec.append((,))
    oCard = oneColumnCard('OFFENSIVE CARD', 't%d_os' % team)
    card += cardTable
    return card

# match interface
