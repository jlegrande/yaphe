infoBar += e('#lastAction', 'Hulk Hogan executes a CRUSHING LEGLOCK')
infoBar += scoreBox(2)
content += infoBar

content += e('div{:style => "clear: both;"}')

teamTimeBar = e('#teamTimeBar')
